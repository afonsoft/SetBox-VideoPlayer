@model FileUploadViewModel
<div class="col-md-12 ml-auto" style="font-size:8pt;">
    <form id="@string.Format("uploadForm{0}",@Model.Id)" action="Streaming/UploadFileStream" method="post" enctype="multipart/form-data">
        <div id="panelUpload" style="padding-bottom:5px;">
            <div class="custom-file">
                <input type="file" asp-for="FileToUpload" id="@string.Format("fileToUpload{0}",@Model.Id)" class="custom-file-input" onchange="ShowName('@Model.Id')">
                <label class="custom-file-label" id="@string.Format("File_Name{0}",@Model.Id)" for="customFile" id="FileSelected">Choose file</label>
                <input type="hidden" asp-for="Id" id="@string.Format("fileId{0}",@Model.Id)">
            </div>
             <div class="input-group mb-2" style="height: 20px;display: block;">
				<div class="progress" id="@string.Format("progress{0}",@Model.Id)"  style="height: 20px;display: none;">
                    <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" id="@string.Format("progressbar{0}",@Model.Id)" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
                </div>
			</div>
        </div>
    </form>
</div>