@model SupportViewModel
@{
    ViewData["Title"] = "Support";
}

@if (!string.IsNullOrEmpty(Model.Mensage))
{
    <script>
        bootbox.alert({ title: "@Model.Title", message: "@Model.Mensage" });
    </script>
}

<h1>Support</h1>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <form asp-controller="Support" asp-action="Index" method="post" id="FormSupportSave">
            <div asp-validation-summary="ModelOnly"
                 class="validation-summary alert alert-danger alert-dismissable" style="width:100%">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <input type="hidden" asp-for="SupportId" />
            <div class="form-group">
                <label for="InputCompany">Company Name</label>
                <input type="text" asp-for="Company" class="form-control" id="InputCompany" placeholder="Compamy Name">
            </div>
            <div class="form-group">
                <label for="InputTelephone">Company Telephone</label>
                <input type="tel" asp-for="Telephone" class="form-control" id="InputTelephone" placeholder="(00) 0000-0000">
            </div>
            <div class="form-group">
                <label for="InputEmail">Email address</label>
                <input type="email" asp-for="Email" class="form-control" id="InputEmail" placeholder="Company email">
            </div>
            <div class="form-group">
                <label for="InputName">Contact Name</label>
                <input type="text" asp-for="Name" class="form-control" id="InputName" placeholder="Contact Name">
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-2"></div>
</div>

@section scripts{
    <script type="text/javascript">

        var options = {
            onKeyPress: function (tel, e, field, options) {
                var masks = ['(00) 00000-0000', '(00) 0000-00009'];
                var mask = (tel.length > 14) ? masks[0] : masks[1];
                $('#InputTelephone').mask(mask, options);
            }
        };

        $(document).ready(function () {
            $('#InputTelephone').mask('(00) 0000-00009', options);
        });
    </script>
}
