<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:VideoPlayerProima"
             xmlns:local="clr-namespace:VideoPlayerProima.Model"
             BackgroundColor="Black"
             x:Class="VideoPlayerProima.MainPage"
             NavigationPage.HasNavigationBar="False"
             x:Name="Root">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ValueProgressBarConverter x:Key="ValueProgressBarConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout x:Name="PageStackLayout" Spacing="10" BackgroundColor="Black">

            <ProgressBar x:Name="progressBarId" 
                         Progress="{Binding ProgressValue, Converter={StaticResource ValueProgressBarConverter}}" 
                         IsVisible="{Binding IsDownloading}" 
                         Margin="10,0" 
                         HorizontalOptions="Center" 
                         VerticalOptions="Center"
                         WidthRequest="300" 
                         HeightRequest="20" />
            
            <Label x:Name="labelLoadingId" 
                   TextColor="White" 
                   Text="{Binding ProgressValue, StringFormat='{0:F2}%'}" 
                   HorizontalOptions="Center" 
                   IsVisible="{Binding IsDownloading}" 
                   VerticalOptions="Center"/>

            <ActivityIndicator x:Name="actInd"
                        IsRunning="True"
                        IsVisible="{Binding IsLoading}" Color="Red"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"/>

            <Label
            x:Name="labelId"
            FontSize="14"
            TextColor="White"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            VerticalOptions="Center"
            Text="{Binding LoadingText}"
            IsVisible="True"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
